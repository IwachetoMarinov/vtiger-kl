            background: #bca263;
        }

        table.activity-tbl tr.no-border td {
            border-bottom: none;
            border-top: none;
        }

        .logo-bg-bottom {
            background: url(layouts/v7/modules/Contacts/resources/Gold_Logo_Higher_Res.png) no-repeat;
